<Window x:Class="pract22._3._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract22._3._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StatusBar VerticalAlignment="Bottom" Height="35">
            <StatusBarItem>
                <DockPanel>
                    <Label>Текущие дата и время:</Label>
                    <Label x:Name="date" Width="120" Margin="20,0,0,0"></Label>
                    <Label x:Name="time" Width="120" Margin="20,0,0,0"></Label>
                </DockPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
